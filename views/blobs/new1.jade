extends ../layout

block content
doctype html
html
	head
		| Add Employee Information
		title New Employee
	body
		form(name='addblob', method='post', action='/blobs')
			table(width='450px')
				tr
					td(valign='top')
						label(for='empName') Employee Name
					td(valign='top')
						input(type='text', name='empName', maxlength='50', size='30')
				tr
					td(valign='top')
						label(for='empNo') Employee Number
					td(valign='top')
						input(type='text', name='empNo', maxlength='50', size='30')
				tr
					td(valign='top')
						label(for='infoEmail') Infosys Email ID
					td(valign='top')
						input(type='text', name='infoEmail', maxlength='80', size='30')
				tr
					td(valign='top')
						label(for='dbsEmail') DBS Email ID
					td(valign='top')
						input(type='text', name='dbsEmail', maxlength='30', size='30')
				tr
					td(valign='top')
						label(for='isBgChecked') BG Check Cleared
					td(valign='top')
						input(type='radio', name='isBgChecked', value='Yes')
						| Yes
						input(type='radio', name='isBgChecked', value='No')
						| No
				tr
					td(valign='top')
						label(for='dbsAssetID') DBS Assest ID
					td(valign='top')
						input(type='text', name='dbsAssetID', size='30')
				tr
					td(valign='top')
						label(for='mobile') Mobile Number
					td(valign='top')
						input(type='number', name='mobile', maxlength='30', size='30')
				tr
					td(valign='top')
						label(for='project') Name of Project
					td(valign='top')
						input(type='text', name='project', size='30')
				tr
					td(valign='top')
						label(for='location') Location
					td(valign='top')
						div(align='left', size='60')
							select(name='location')
								option(value='DAH') DAH
								option(value='Signature') Signature
								option(value='Attrium') Attrium
								option(value='Plaza8') Plaza8
				tr
					td(colspan='2', style='text-align:center')
						input(type='submit', value='Submit')
